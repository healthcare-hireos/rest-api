{
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "module": "CommonJS",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "incremental": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "baseUrl": "./",
  },
  "include": ["**/*.ts", "**/*.js", "**/*.yml"],
  "exclude": [
    "node_modules/**/*",
    ".vscode/**/*"
  ]
}
